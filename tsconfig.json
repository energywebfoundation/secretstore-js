{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2018",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["es2019", "dom"],
        "types": ["node", "mocha"],
        "skipLibCheck": true,
        "preserveSymlinks": true,
        "pretty": true,
        "outDir": "./dist",
    },
    "include": ["src/**/*", "test"]
}
